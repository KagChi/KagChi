{
  "name": "kagchi",
  "private": true,
  "type": "module",
  "description": "Just a simple website for my personal website",
  "version": "4.0.0",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix"
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@tabler/icons-react": "^3.11.0",
    "@tanstack/react-query": "^5.51.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.3.6",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@hazmi35/eslint-config": "^12.0.0",
    "@next/eslint-plugin-next": "^14.2.5",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@hazmi35/eslint-config/typescript",
      "plugin:tailwindcss/recommended",
      "next"
    ],
    "rules": {
      "tailwindcss/no-custom-classname": [
        "error",
        {
          "whitelist": [
            "fa-.*"
          ]
        }
      ],
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-redundant-type-constituents": "off",
      "max-lines": "off"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KagChi/KagChi.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KagChi/KagChi/issues"
  },
  "homepage": "https://github.com/KagChi/KagChi#readme"
